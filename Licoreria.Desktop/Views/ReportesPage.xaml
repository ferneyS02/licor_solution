<Page x:Class="Licoreria.Desktop.Views.ReportesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#000000">
    <StackPanel Margin="20">
        <TextBlock Text="Reportes PDF" Foreground="White" FontSize="20" Margin="0,0,0,10"/>

        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Desde:" Foreground="White" VerticalAlignment="Center"/>
            <DatePicker x:Name="DpDesde" Margin="8,0,20,0"/>
            <TextBlock Text="Hasta:" Foreground="White" VerticalAlignment="Center"/>
            <DatePicker x:Name="DpHasta" Margin="8,0,20,0"/>
            <Button Content="Generar PDF" Background="#D4AF37" Foreground="White" Click="Generar_Click"/>
        </StackPanel>

        <TextBlock x:Name="TxtInfo" Foreground="#D4AF37" Margin="0,10,0,0"/>

        <!-- PURGA -->
        <Border x:Name="PurgePanel" Margin="0,20,0,0" Background="#0F0F0F" CornerRadius="12" Padding="16">
            <StackPanel>
                <TextBlock Text="Purga de ventas (solo Admin/Sistema)"
                           Foreground="White" FontSize="16" Margin="0,0,0,8"/>

                <TextBlock Text="Elimina órdenes, detalles y pagos de hace más de X años."
                           Foreground="#AAAAAA" TextWrapping="Wrap" Margin="0,0,0,12"/>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Eliminar ventas de hace más de" Foreground="White" VerticalAlignment="Center"/>
                    <TextBox x:Name="TxtYears" Width="60" Margin="10,0,10,0" Text="5"/>
                    <TextBlock Text="años" Foreground="White" VerticalAlignment="Center"/>

                    <Button x:Name="BtnPurgar"
                            Content="Purgar"
                            Background="#D4AF37"
                            Foreground="White"
                            Margin="20,0,0,0"
                            Click="Purgar_Click"/>
                </StackPanel>

                <TextBlock x:Name="TxtPurgeInfo" Foreground="#D4AF37" Margin="0,10,0,0"/>
            </StackPanel>
        </Border>
    </StackPanel>
</Page>
