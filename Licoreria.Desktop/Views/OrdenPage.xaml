<Page x:Class="Licoreria.Desktop.Views.OrdenPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#000000">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="Titulo" Foreground="White" FontSize="25" Margin="0,0,0,10"/>

        <ListView x:Name="Lista"
                  Grid.Row="1"
                  Background="#0F0F0F"
                  Foreground="White"
                  SelectionChanged="Lista_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Producto" DisplayMemberBinding="{Binding NombreProducto}" Width="260"/>
                    <GridViewColumn Header="Cant." DisplayMemberBinding="{Binding Cantidad}" Width="60"/>
                    <GridViewColumn Header="Precio" DisplayMemberBinding="{Binding PrecioUnitario}" Width="90"/>
                    <GridViewColumn Header="Total" DisplayMemberBinding="{Binding Total}" Width="90"/>
                </GridView>
            </ListView.View>
        </ListView>

        <!-- BOTONES -->
        <Grid Grid.Row="2" Margin="0,12,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- IZQUIERDA: acciones -->
            <StackPanel Orientation="Horizontal" Grid.Column="0">
                <Button Content="Agregar producto"
                        Background="#D4AF37"
                        Foreground="White"
                        Margin="0,0,8,0"
                        Padding="14,8"
                        Click="Agregar_Click"/>

                <Button x:Name="BtnQuitar1"
                        Content="Quitar 1"
                        Background="#444444"
                        Foreground="White"
                        Margin="0,0,8,0"
                        Padding="14,8"
                        Click="Quitar1_Click"
                        IsEnabled="False"/>

                <Button x:Name="BtnEliminarLinea"
                        Content="Eliminar línea"
                        Background="#444444"
                        Foreground="White"
                        Margin="0,0,8,0"
                        Padding="14,8"
                        Click="EliminarLinea_Click"
                        IsEnabled="False"/>

                <Button Content="Cancelar orden"
                        Background="DarkRed"
                        Foreground="White"
                        Padding="14,8"
                        Click="CancelarOrden_Click"/>
            </StackPanel>

            <!-- DERECHA: pago -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock Text="Total:" VerticalAlignment="Center" Foreground="White" Margin="0,0,5,0"/>
                <TextBlock x:Name="TxtTotal" VerticalAlignment="Center" Foreground="#D4AF37" FontWeight="Bold" Margin="0,0,12,0"/>

                <ComboBox x:Name="CbPago" Width="101" Margin="0,0,8,0">
                    <ComboBoxItem Content="Efectivo" IsSelected="True"/>
                    <ComboBoxItem Content="Virtual"/>
                    <ComboBoxItem Content="Tarjeta"/>
                </ComboBox>

                <Button Content="Pagar" Background="#D4AF37" Foreground="White" Margin="0,0,8,0" Click="Pagar_Click" Width="83"/>
                <Button Content="Cerrar Mesa" Background="DarkRed" Foreground="White" Click="Cerrar_Click" Width="107"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
