<Page x:Class="Licoreria.Desktop.Views.OrdenPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#000000">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="Titulo" Foreground="White" FontSize="20" Margin="0,0,0,10"/>

        <ListView x:Name="Lista" Grid.Row="1" Background="#0F0F0F" Foreground="White">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Producto" DisplayMemberBinding="{Binding NombreProducto}" Width="260"/>
                    <GridViewColumn Header="Cant." DisplayMemberBinding="{Binding Cantidad}" Width="60"/>
                    <GridViewColumn Header="P.Unit" DisplayMemberBinding="{Binding PrecioUnitario}" Width="90"/>
                    <GridViewColumn Header="Total" DisplayMemberBinding="{Binding Total}" Width="90"/>
                </GridView>
            </ListView.View>
        </ListView>

        <Border Grid.Row="2" Background="#0F0F0F" Padding="10" CornerRadius="8">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Agregar producto" Background="#D4AF37" Foreground="White" Padding="12,8"
                        Margin="0,0,10,0" Click="Agregar_Click"/>

                <TextBlock Text="TOTAL:" Foreground="White" VerticalAlignment="Center" />
                <TextBlock x:Name="TxtTotal" Foreground="#D4AF37" FontWeight="Bold" FontSize="16"
                           Margin="8,0,18,0" VerticalAlignment="Center"/>

                <ComboBox x:Name="CbPago" Width="140" Margin="0,0,10,0">
                    <ComboBoxItem Content="Efectivo" IsSelected="True"/>
                    <ComboBoxItem Content="Virtual"/>
                    <ComboBoxItem Content="Tarjeta"/>
                </ComboBox>

                <Button Content="Pagar" Background="#D4AF37" Foreground="White" Padding="12,8"
                        Margin="0,0,10,0" Click="Pagar_Click"/>

                <Button Content="Cerrar Mesa" Background="DarkRed" Foreground="White" Padding="12,8"
                        Click="Cerrar_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
