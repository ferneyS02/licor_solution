<Window x:Class="Licoreria.Desktop.Views.ChangePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cambiar contraseña" Height="360" Width="520"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#000000">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Cambiar contraseña"
                   Foreground="White" FontSize="20" Margin="0,0,0,12"/>

        <Border Grid.Row="1" Background="#0F0F0F" CornerRadius="12" Padding="16">
            <StackPanel>
                <TextBlock Text="Contraseña actual" Foreground="White" Margin="0,0,0,6"/>
                <PasswordBox x:Name="TxtActual" Height="32"/>

                <TextBlock Text="Nueva contraseña" Foreground="White" Margin="0,14,0,6"/>
                <PasswordBox x:Name="TxtNueva" Height="32"/>

                <TextBlock Text="Confirmar nueva contraseña" Foreground="White" Margin="0,14,0,6"/>
                <PasswordBox x:Name="TxtConfirmar" Height="32"/>

                <TextBlock x:Name="TxtInfo" Foreground="#D4AF37" Margin="0,12,0,0" TextWrapping="Wrap"/>
            </StackPanel>
        </Border>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Cancelar" Width="110" Margin="0,0,10,0"
                    Background="#222" Foreground="White" Click="Cancelar_Click"/>
            <Button x:Name="BtnGuardar" Content="Guardar" Width="110"
                    Background="#D4AF37" Foreground="White" Click="Guardar_Click"/>
        </StackPanel>
    </Grid>
</Window>
