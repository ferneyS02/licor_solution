<Window x:Class="Licoreria.Desktop.Views.ProductosWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Agregar productos" Height="650" Width="980" Background="#000000" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel>
            <TextBlock Text="Categorías" Foreground="White" FontSize="16" Margin="0,0,0,8"/>
            <ListBox x:Name="LstCategorias" Background="#0F0F0F" Foreground="White" SelectionChanged="LstCategorias_SelectionChanged"/>
        </StackPanel>

        <ScrollViewer Grid.Column="1">
            <WrapPanel x:Name="WrapProductos"/>
        </ScrollViewer>
    </Grid>
</Window>
