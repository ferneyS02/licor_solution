<Window x:Class="Licoreria.Desktop.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login - Licorería 45°"
        Height="612" Width="860"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#000000"
        ShowActivated="True">

    <Grid Margin="20" KeyboardNavigation.TabNavigation="Cycle">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <Image Height="204" Margin="0,0,0,10" Stretch="Uniform"
                   Source="pack://application:,,,/Assets/logo_licoreria.png" Width="216"/>
            <TextBlock Text="Iniciar sesión"
                       Foreground="White"
                       FontSize="20"
                       HorizontalAlignment="Center"/>
        </StackPanel>

        <Border Grid.Row="1"
                Background="#0F0F0F"
                CornerRadius="12"
                Padding="16"
                Margin="0,16,0,16">
            <StackPanel>
                <TextBlock Text="Usuario" Foreground="White" Margin="0,0,0,6"/>

                <TextBox x:Name="TxtUsuario"
                         Height="36"
                         FontSize="14"
                         Padding="12,6"
                         Background="#1A1A1A"
                         Foreground="White"
                         CaretBrush="White"
                         BorderBrush="#333"
                         BorderThickness="1"
                         TabIndex="0"
                         PreviewMouseDown="Input_PreviewMouseDown"/>

                <TextBlock Text="Contraseña" Foreground="White" Margin="0,14,0,6"/>

                <PasswordBox x:Name="TxtPassword"
                             Height="36"
                             FontSize="14"
                             Padding="12,6"
                             Background="#1A1A1A"
                             Foreground="White"
                             CaretBrush="White"
                             BorderBrush="#333"
                             BorderThickness="1"
                             TabIndex="1"
                             KeyDown="Password_KeyDown"
                             PreviewMouseDown="Input_PreviewMouseDown"/>

                <TextBlock x:Name="TxtError"
                           Foreground="#D4AF37"
                           Margin="0,12,0,0"
                           TextWrapping="Wrap"/>
            </StackPanel>
        </Border>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Salir"
                    Width="90" Margin="0,0,10,0" Padding="10"
                    Background="#222" Foreground="White"
                    IsCancel="True"
                    Click="Salir_Click"/>

            <Button x:Name="BtnLogin"
                    Content="Entrar"
                    Width="90" Padding="10"
                    Background="#D4AF37" Foreground="White"
                    IsDefault="True"
                    Click="Login_Click"/>
        </StackPanel>
    </Grid>
</Window>
